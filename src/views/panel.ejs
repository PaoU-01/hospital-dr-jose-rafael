                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-users"></i>
                                    Subgrupo
                                </label>
                                <div style="position: relative;">
                                    <i class="fas fa-layer-group input-icon"></i>
                                    <input type="text" required placeholder="Ingrese el subgrupo">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-barcode"></i>
                                    Número de Serie
                                </label>
                                <div style="position: relative;">
                                    <i class="fas fa-hashtag input-icon"></i>
                                    <input type="text" required placeholder="Ingrese el número de serie">
                                </div>
                            </div>
                            
                            <!-- Campos de 2 columnas -->
                            <div class="form-group" style="grid-column: span 2;">
                                <label>
                                    <i class="fas fa-clipboard-list"></i>
                                    Incorporaciones
                                </label>
                                <div style="position: relative;">
                                    <textarea required placeholder="Detalle de las incorporaciones"></textarea>
                                </div>
                            </div>
                            
                            <div class="form-group" style="grid-column: span 2;">
                                <label>
                                    <i class="fas fa-comment-dots"></i>
                                    Observaciones
                                </label>
                                <div style="position: relative;">
                                    <textarea required placeholder="Agregue observaciones relevantes"></textarea>
                                </div>
                            </div>
            
                            <!-- Sección 2 - Clasificación -->
