            <div class="modal-overlay" id="modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 style="margin: 0; display: flex; align-items: center; gap: 10px;">
                            <i class="fas fa-cube"></i>
                            Nuevo Bien
                        </h2>
                        <button onclick="closeModal()" style="background: none; border: none; color: white; cursor: pointer; font-size: 1.5rem;">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    
                    <div class="modal-body">
                        <form class="form-grid">
                            <!-- Sección 1 - Información General -->
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-tag"></i>
                                    Nombre del Bien
                                </label>
                                <div style="position: relative;">
                                    <i class="fas fa-cube input-icon"></i>
                                    <input type="text" required placeholder="Ingrese el nombre del bien">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-certificate"></i>
                                    Marca
                                </label>
                                <div style="position: relative;">
                                    <i class="fas fa-tag input-icon"></i>
                                    <input type="text" required placeholder="Ingrese la marca">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-cog"></i>
                                    Modelo
                                </label>
                                <div style="position: relative;">
                                    <i class="fas fa-microchip input-icon"></i>
                                    <input type="text" required placeholder="Ingrese el modelo">
                                </div>
                            </div>
                            
                            <!-- Nuevos Campos Grupo y Subgrupo -->
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-users-cog"></i>
                                    Grupo
                                </label>
                                <div style="position: relative;">
                                    <i class="fas fa-layer-group input-icon"></i>
