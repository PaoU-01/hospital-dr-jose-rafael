            <div class="search-container mb-6">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="searchInput" class="search-input" placeholder="Buscar usuarios..."
                    oninput="searchUsers()">
            </div>

            <div class="bg-white rounded-xl shadow-md p-6">
                <!-- Table -->
