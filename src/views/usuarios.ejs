                                <div class="button-group">
                                    <button type="button" onclick="closeUsuarioModal()" class="btn btn-secondary">
                                        <i class="fas fa-times-circle icon"></i>
                                        Cancelar
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save icon"></i>
                                        Guardar
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
